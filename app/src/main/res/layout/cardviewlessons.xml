<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="7dp"
    android:id="@+id/cvLessons">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@drawable/lessongradiant"
       >

        <TextView
            android:id="@+id/tvLessonType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/segoe_ui_bold"
            android:paddingStart="20dp"
            android:text="@string/lesson"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lessonNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/tvLessonType"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Les num"
            android:textSize="15sp" />

        <TextView
            android:fontFamily="@font/segoe_ui_bold"
            android:id="@+id/lessonTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/lessonNumber"
            android:text="Les Title"
            android:textSize="15sp"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lessonTitle"
            android:layout_centerVertical="true"
            android:fontFamily="@font/segoe_ui_bold"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>