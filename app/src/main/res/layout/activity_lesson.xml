<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LessonActivity">

    <TextView
        android:id="@+id/tvLessonType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/tvLnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/tvLessonType"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toEndOf="@+id/tvLessonType"
        app:layout_constraintTop_toTopOf="@+id/tvLessonType"
        app:layout_constraintVertical_bias="0.265" />

    <Button
        android:id="@+id/btnPlayYoutubeVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/common_google_play_services_enable_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLessonType"
        app:layout_constraintVertical_bias="0.06999999" />


    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/viewYoutubePlayer"
        android:layout_width="0dp"
        android:layout_height="248dp"
        app:layout_constraintBottom_toTopOf="@+id/tvLnum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="261dp" />


</androidx.constraintlayout.widget.ConstraintLayout>